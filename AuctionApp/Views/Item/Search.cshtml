
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<AuctionApp.Core.BLL.DTO.ItemDTO>

<style>
    .price{
        font-size: 18px;
    }
</style>

<h4 class="p-4">Wynik wyszukiwania dla: "@ViewBag.Phrase".</h4>

@if (Model.Count()!=0)
{
<ul>
    @foreach (var item in Model)
    {
    <li class="d-flex justify-content-between pb-2">
        <div class="d-flex justify-content-between">
            <img src="@item.ImgSrc" height="90" width="120" />
            <a class="h5 ml-3" asp-controller="Item" asp-action="Item" asp-route-id="@item.Id">@item.Name</a>
        </div>
        <p class="price">
            @if (item.BuyNowPrice != 0)
            {
                <span>@string.Format(new System.Globalization.CultureInfo("pl"), "{0:C}", item.BuyNowPrice)</span>
            }
            else
            {
                <span>Tylko licytacja.</span>
            }
        </p>
    </li>
    }
</ul>
}
else
{
    <p class="text-center pt-2 pb-5 h4">Brak wyników.</p>
}