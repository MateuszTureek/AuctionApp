
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AuctionApp.Models.Account.RegisterViewModel

<div class="container pt-2 pb-2">
    <h2>Rejstracja</h2>
    <form asp-controller="Account" asp-action="Register" method="post">

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(m => m.Username, new { @class = "col-lg-3" })
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-lg-3" })
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { @class = "col-lg-3" })
            <div class="col-lg-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-3" })
            <div class="col-lg-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-9 col-lg-3">
                <button type="submit" class="btn btn-primary pull-right">Potwierdź</button>
            </div>
        </div>
    </form>
</div>