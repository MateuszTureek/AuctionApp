@model IEnumerable<AuctionApp.Core.BLL.DTO.CategoryDTO>

<style>
    #Categories a{
        border-radius: 0;
    }

    #Categories ul a.active {
        color: black;
        background: none;
    }
</style>

<ul id="Categories" class="nav nav-pills flex-column">
    @foreach (var category in Model)
    {
    <li data-id="@category.Id" class="nav-item mb-1">
        <a class="nav-link"
           asp-controller="Auction" asp-action="Index"
           asp-route-categoryId="@category.Id"
           asp-route-sortBy="@ViewBag.SortBy">
            @category.Name
        </a>
        
        <ul class="list-unstyled flex-column d-none" style="background: rgba(0, 0, 0, .10);">
            @foreach (var subcategory in category.Subcategories)
            {
                <li data-id="@subcategory.Id" class="nav-item">
                    <a class="nav-link"
                       asp-controller="Auction" asp-action="Index"
                       asp-route-subcategoryId="@subcategory.Id"
                       asp-route-sortBy="@ViewBag.SortBy">@subcategory.Name</a>
                </li>
            }
        </ul>
    </li>
    }
</ul>