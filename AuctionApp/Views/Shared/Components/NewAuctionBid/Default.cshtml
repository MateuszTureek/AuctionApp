
@model AuctionApp.Models.NewBidViewModel

<div id="NewBidModal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Item" asp-action="CreateAuctionBid" asp-area="customer">
                <div class="modal-header">
                    <h5 class="modal-title">Nowa oferta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    @Html.HiddenFor(m => m.ItemId)
                    @Html.HiddenFor(m => m.BestBidPrice)
                    <div class="form-group row">
                        @Html.LabelFor(m => m.ItemName, new { @class = "col-lg-4" })
                        <div class="col-lg-8 row">
                            @Html.DisplayFor(m => m.ItemName)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.BestBidPrice, new { @class = "col-lg-4" })
                        <div id="BestBid" data-best-price="@Model.BestBidPrice" class="col-lg-8">
                            @Html.DisplayFor(m => m.BestBidPrice)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.MyBid, new { @class = "col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(m => m.MyBid, new{ htmlAttributes=new{ @class="form-control bidValid"}})
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                    <button type="submit" class="btn btn-primary">Dodaj oferte</button>
                </div>
            </form>
        </div>
    </div>
</div>