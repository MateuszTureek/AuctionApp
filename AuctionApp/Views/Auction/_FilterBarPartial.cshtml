<div id="FilterBar" class="btn-toolbar justify-content-end pt-2 pb-2" role="toolbar">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Order by:</span>
        </div>
        <div class="btn-group" role="group">
            <a role="button" class="btn btn-outline-secondary active"
               asp-controller="Auction" asp-action="Index"
               asp-route-sortBy="@AuctionApp.Core.BLL.Enum.SortBy.Name"
               asp-route-categoryId="@ViewBag.CategoryId">Name</a>
            <a role="button" class="btn btn-outline-secondary"
               asp-controller="Auction" asp-action="Index"
               asp-route-sortBy="@AuctionApp.Core.BLL.Enum.SortBy.EndDateAuction"
