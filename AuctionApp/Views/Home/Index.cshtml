@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        @Html.Partial("_CarouselPartial")
    </div>
</div>

<div class="pt-2 pb-3 bg-dark">
    <h3 class="col-12 text-white">Ostatnio rozpoczęte aukcje:</h3>
    @await Component.InvokeAsync("Item", new { status = AuctionApp.Core.DAL.Data.AuctionContext.Domain.Status.InAuction })
</div>

<div class="pt-2 pb-3 bg-dark">
    <h3 class="col-12 text-white">Przedmioty oczekujące na aktywacje:</h3>
    @await Component.InvokeAsync("Item", new { status = AuctionApp.Core.DAL.Data.AuctionContext.Domain.Status.Waiting })
</div>