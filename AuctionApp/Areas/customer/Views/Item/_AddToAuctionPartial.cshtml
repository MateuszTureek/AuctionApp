@model AuctionApp.Areas.customer.Models.Item.CreateAuctionViewModel

<div id="NewAuctionModal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Nowa aukcja.</div>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="NewAuctionForm" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <h5>Przedmiot: <strong><!-- render name here --></strong></h5>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.AuctionStart, new { @class = "col-3" })
                        <div class="col-9">
                            @Html.EditorFor(m => m.AuctionStart, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.AuctionEnd, new { @class = "col-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.AuctionEnd, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                <button id="BtnAddToAuctionConfirm" type="button" class="btn btn-primary">Dodaj aukcje</button>
            </div>
        </div>
    </div>
</div>