
@{
    ViewData["Title"] = "GetItemBids";
    Layout = "~/Areas/customer/Views/Shared/_CustomerLayout.cshtml";
}

@model AuctionApp.Areas.customer.Models.Item.ItemAuctionViewModel

<h4>Oferty dla przedmiotu : @Model.ItemName.</h4>
<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-5">
                <img src="@Model.ImgSrc" style="height: 280px;width: 100%;" />
            </div>
            <div class="col-lg-7">
                <h4>@Model.ItemName</h4>
                <table class="table">
                    <tr>
                        <th>Kup teraz:</th>
                        <td>@Model.PriceBuyNow</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m=>m.Payment):</th>
                        <td>@Model.Payment</td>
                    </tr>
                    <tr>
                        <th>Rozpoczęto:</th>
                        <td>@Model.AuctionStart</td>
                    </tr>
                    <tr>
                        <th>Koniec:</th>
                        <td>@Model.AuctionEnd</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <h4>Ofert</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Użytkownik</th>
                    <th>Oferta</th>
                    <th>Dodano</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bid in Model.Bids)
                {
                <tr>
                    <td>@bid.Username</td>
                    <td>@bid.BidAmount</td>
                    <td>@bid.DatePlaced</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>