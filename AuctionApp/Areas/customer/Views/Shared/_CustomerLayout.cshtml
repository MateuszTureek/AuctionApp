<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/dist/css/customerStyle.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a asp-controller="Home" asp-action="Index" asp-area="" class="navbar-brand">Auction application</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#NavbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="NavbarCollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link pull-right">
                                @User.Identity.Name
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mr-2">
                                <span class="fa fa-bell"></span>
                            </a>
                        </li>
                        <li class="nav-item mr-4">
                            <a asp-controller="Manage" asp-action="Index" asp-area="" class="nav-link">
                                <span class="fa fa-cog"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="LogOut" asp-area="">
                                <button type="submit" class="btn btn-dark">
                                    <span class="fa fa-sign-out"></span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <side class="col-lg-12">
                <ul class="nav bg-primary">
                    <li class="nav-item">
                        <a class="nav-link text-center active" asp-area="customer" asp-controller="Manage" asp-action="Index">
                            <span class="fa fa-home"></span>
                            <span class="d-block">Strona główna</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" asp-area="customer" asp-controller="Item" asp-action="Index">
                            <span class="fa fa-archive"></span>
                            <span class="d-block">Moje przedmioty</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" asp-area="customer" asp-controller="Bid" asp-action="Index">
                            <span class="fa fa-money"></span>
                            <span class="d-block">Moje oferty</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" asp-area="customer" asp-controller="Home" asp-action="Contact">
                            <span class="fa fa-address-book"></span>
                            <span class="d-block">Dane kontaktowe</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" href="#">
                            <span class="fa fa-history"></span>
                            <span class="d-block">Historia</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-center" asp-controller="Home" asp-area="customer" asp-action="Help">
                            <span class="fa fa-question"></span>
                            <span class="d-block">Pomoc</span>
                        </a>
                    </li>
                </ul>
            </side>
            <main class="col-lg-12 mt-2">
                @RenderBody()
            </main>
        </div>
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validate/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/dist/tsCustomer.bundle.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
