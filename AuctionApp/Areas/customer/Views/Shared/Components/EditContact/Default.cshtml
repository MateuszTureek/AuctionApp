
@model AuctionApp.Areas.customer.Models.ContactViewModel

<div id="EditContactModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-area="customer" asp-controller="Customer" asp-action="EditContact">
                <div class="modal-header">
                    <h5 class="modal-title">Edycja danych kontaktowych.</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Name, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Surname, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Email, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Phone, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Address, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Country, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                    <button type="submit" class="btn btn-primary">Zatwierdź zmiany</button>
                </div>
            </form>
        </div>
    </div>
</div>