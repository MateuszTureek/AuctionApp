
@model AuctionApp.Areas.customer.Models.Item.NewItemViewModel

<div class="modal fade" id="NewItemModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Item" asp-action="Create" asp-area="customer" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Nowy przedmiot</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(false,"", new { @class = "text-danger" })

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Name, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3">Zdjęcie</label>
                        <div class="col-lg-9">
                            <input type="file" name="File" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.ConstPrice, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.EditorFor(m => m.ConstPrice, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.DeliverMethods, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            <select asp-for="MethId" asp-items="@Model.DeliverMethods" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Categories, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            <select asp-for="CatId" asp-items="@Model.Categories" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Subcategories, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            <select asp-for="SubcatId" asp-items="@Model.Subcategories" class="form-control"></select>
                        </div>
                    </div>
                    <div id="ItemDescriptions" class="form-group row">
                        <div class="col-lg-12 mb-1">
                            <div class="row">
                                <label class="col-lg-3">Nowy opis:</label>
                                <div class="col-lg-9">
                                    <button id="BtnNewItemDescription" type="button" class="btn btn-dark">Dodaj pole</button>
                                    <button id="BtnDeleteItemDescription" type="button" class="btn btn-danger">Usuń pole</button>
                                </div>
                            </div>
                        </div>
                        <!-- render descriptions here -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                </div>
            </form>
        </div>
    </div>
</div>