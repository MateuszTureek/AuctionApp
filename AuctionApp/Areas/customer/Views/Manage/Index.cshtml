
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/customer/Views/Shared/_CustomerLayout.cshtml";
}

<!-- to partial view -->
@await Component.InvokeAsync("NewItem")
<!-- end -->
<div class="row">
    <div class="col-lg-3 mb-2">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#NewItemModal">Nowy przedmiot</button>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        <!-- component -->
        <div class="card border-dark">
            <div class="card-body text-dark">
                <div class="d-flex justify-content-lg-between">
                    <div>
                        <span class="fa fa-archive"></span>
                    </div>
                    <div>
                        <p class="text-right">@ViewBag.WaitingItemsCount</p>
                        <p class="text-right">Przedmioty oczekujące</p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a href="#">Szczegóły</a>
                    <span class="fa fa-arrow-circle-o-right"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <!-- component -->
        <div class="card border-dark">
            <div class="card-body text-dark">
                <div class="d-flex justify-content-lg-between">
                    <div>
                        <span class="fa fa-globe"></span>
                    </div>
                    <div>
                        <p class="text-right">@ViewBag.InAuctionItemsCount</p>
                        <p class="text-right">Aktywne aukcje</p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <span>Szczegóły</span>
                    <span class="fa fa-arrow-circle-o-right"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <!-- component -->
        <div class="card border-dark">
            <div class="card-body text-dark">
                <div class="d-flex justify-content-lg-between">
                    <div>
                        <span class="fa fa-lock"></span>
                    </div>
                    <div>
                        <p class="text-right">@ViewBag.FinancialLiabilities</p>
                        <p class="text-right">Moje zobowiązania</p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <span>Szczegóły</span>
                    <span class="fa fa-arrow-circle-o-right"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <!-- component -->
        <div class="card border-dark">
            <div class="card-body text-dark">
                <div class="d-flex justify-content-lg-between">
                    <div>
                        <span class="fa fa-star"></span>
                    </div>
                    <div>
                        <p class="text-right">@ViewBag.MyLeadBidsAmount</p>
                        <p class="text-right">Moje przodujące oferty</p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <span>Szczegóły</span>
                    <span class="fa fa-arrow-circle-o-right"></span>
                </div>
            </div>
        </div>
    </div>
</div>

